<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/chatViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:background="@drawable/chat_left"
        android:backgroundTint="@color/Lilac"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/chatViewLeftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/chatViewLeftLAnim"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/dot_loader"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chatViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:background="@drawable/chat_right"
        android:backgroundTint="@color/Amethyst"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        tools:ignore="RelativeOverlap">
        <TextView
            android:id="@+id/chatViewRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>